@model BookViewModel

@{
    ViewData["Title"] = "Book Details";
}

<style>
    body {
        background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
        color: #e5e7eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    h2 {
        color: #60a5fa;
        font-weight: 800;
        margin: 0;
        text-shadow: 1px 1px 5px #1e40af;
    }

    .details-card {
        background-color: #111827;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 500px;
        margin: 0 auto 3rem auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.5);
    }

    dl {
        margin-bottom: 0;
    }

    dt {
        float: left;
        width: 30%;
        font-weight: 600;
        color: #93c5fd;
        padding: 0.25rem 0;
    }

    dd {
        margin-left: 30%;
        padding: 0.25rem 0;
        color: #d1d5db;
    }

    .card-footer {
        margin-top: 1.5rem;
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .btn-outline-primary {
        color: #60a5fa;
        background-color: transparent;
        border: 1.5px solid #60a5fa;
        border-radius: 0.6rem;
        padding: 0.4rem 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
    }
    .btn-outline-primary:hover {
        background-color: #60a5fa;
        color: #111827;
        text-decoration: none;
    }

    .btn-secondary {
        background-color: #374151;
        border: none;
        padding: 0.4rem 1rem;
        border-radius: 0.6rem;
        font-weight: 600;
        color: #9ca3af;
        text-decoration: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: background-color 0.3s ease;
    }
    .btn-secondary:hover {
        background-color: #4b5563;
        color: white;
        text-decoration: none;
    }
</style>

<div class="details-card">
    <div>
        <h2>📖 @Model.Title</h2>
    </div>
    <dl>
        <dt>ISBN</dt>
        <dd>@Model.ISBN</dd>

        <dt>Price</dt>
        <dd>$@Model.Price.ToString("0.00")</dd>
    </dl>

    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn-outline-primary">✏️ Edit</a>
        <a asp-action="Index" class="btn-secondary">← Back to List</a>
    </div>
</div>
