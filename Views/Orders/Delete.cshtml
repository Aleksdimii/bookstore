@model Order

@{
    ViewData["Title"] = "Delete Order";
}

<style>
    body {
        background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
        color: #e5e7eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    h1 {
        color: #f87171; 
        font-weight: 800;
        text-align: center;
        margin-bottom: 1rem;
        text-shadow: 1px 1px 5px #991b1b;
    }

    h3 {
        text-align: center;
        margin-bottom: 2rem;
        color: #fca5a5;
    }

    .delete-card {
        background-color: #111827;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 480px;
        margin: 0 auto 3rem auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        color: #e5e7eb;
    }

    h4 {
        color: #93c5fd;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    dl.row {
        margin-bottom: 2rem;
    }

    dt.col-sm-2 {
        font-weight: 600;
        color: #bfdbfe;
    }

    dd.col-sm-10 {
        color: #d1d5db;
        margin-left: 0;
    }

    form {
        text-align: center;
    }

    input.btn-danger {
        background-color: #dc2626;
        border: none;
        padding: 0.6rem 1.4rem;
        border-radius: 0.6rem;
        font-weight: 600;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-right: 1rem;
    }

    input.btn-danger:hover {
        background-color: #b91c1c;
    }

    a.btn-back {
        display: inline-block;
        color: #60a5fa;
        font-weight: 600;
        text-decoration: none;
        padding: 0.55rem 1.3rem;
        border-radius: 0.6rem;
        border: 1px solid transparent;
        background-color: #1e3a8a;
        transition: all 0.3s ease;
    }

    a.btn-back:hover {
        background-color: #3b82f6;
        color: #fff;
        border-color: #60a5fa;
    }
</style>

<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this?</h3>

<div class="delete-card">
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn-danger" />
        <a asp-action="Index" class="btn-back">Cancel</a>
    </form>
</div>

