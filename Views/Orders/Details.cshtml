@model Order

@{
    ViewData["Title"] = "Order Details";
}

<style>
    body {
        background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
        color: #e5e7eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    h1 {
        color: #60a5fa;
        font-weight: 800;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 5px #1e40af;
    }

    .details-card {
        background-color: #111827;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 480px;
        margin: 0 auto 3rem auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        color: #e5e7eb;
    }

    h4 {
        color: #93c5fd;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    dl.row {
        margin-bottom: 2rem;
    }

    dt.col-sm-2 {
        font-weight: 600;
        color: #bfdbfe;
    }

    dd.col-sm-10 {
        color: #d1d5db;
        margin-left: 0;
    }

    .action-links {
        text-align: center;
    }

    .action-links a {
        color: #60a5fa;
        font-weight: 600;
        text-decoration: none;
        margin: 0 0.8rem;
        padding: 0.4rem 1rem;
        border-radius: 0.5rem;
        background-color: #1e3a8a;
        transition: all 0.3s ease;
    }

    .action-links a:hover {
        background-color: #3b82f6;
        color: #fff;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="details-card">
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>
    </dl>
</div>

<div class="action-links">
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
