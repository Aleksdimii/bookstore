@model BookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<style>
    body {
        background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
        color: #e5e7eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    h1 {
        color: #60a5fa;
        font-weight: 800;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 5px #1e40af;
    }

    .edit-card {
        background-color: #111827;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 500px;
        margin: 0 auto 3rem auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.5);
    }

    label {
        color: #93c5fd;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    input.form-control {
        background-color: #1f2937;
        border: 1px solid #374151;
        color: #e5e7eb;
        border-radius: 0.5rem;
        padding: 0.5rem 0.75rem;
        transition: border-color 0.3s ease;
        width: 100%;
        margin-bottom: 1rem;
    }

    input.form-control:focus {
        border-color: #60a5fa;
        outline: none;
        background-color: #374151;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: -0.75rem;
        margin-bottom: 1rem;
        display: block;
    }

    .btn-primary {
        background-color: #2563eb;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 0.6rem;
        font-weight: 600;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #1d4ed8;
    }

    .btn-secondary {
        background-color: #374151;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 0.6rem;
        font-weight: 600;
        color: #9ca3af;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn-secondary:hover {
        background-color: #4b5563;
        color: white;
        text-decoration: none;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1.5rem;
    }

    .alert-danger {
        background-color: #b91c1c;
        color: white;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="edit-card">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <input type="hidden" asp-for="BookId" />

        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" placeholder="e.g. 978-3-16-148410-0" />
        <span asp-validation-for="ISBN" class="text-danger"></span>

        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="e.g. 19.99" />
        <span asp-validation-for="Price" class="text-danger"></span>

        <div class="form-actions">
            <a asp-action="Index" class="btn-secondary">← Back to List</a>
            <input type="submit" value="Save Changes" class="btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
