@model AuthorViewModel

@{
    ViewData["Title"] = "Author Details";
}

<style>
    body {
        background: linear-gradient(to right, #1e293b, #0f172a);
        color: #f8fafc;
        font-family: 'Segoe UI', sans-serif;
        padding: 2rem 1rem;
    }

    .details-card {
        max-width: 600px;
        margin: 0 auto;
        background-color: #1e293b;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
    }

    .details-card h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #93c5fd;
        margin-bottom: 1rem;
    }

    .details-card dt {
        color: #facc15;
        font-weight: 500;
        margin-top: 1rem;
    }

    .details-card dd {
        margin-left: 0;
        font-size: 1rem;
    }

    .details-actions {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
    }

    .details-actions a {
        padding: 0.5rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
    }

    .btn-edit {
        background-color: #3b82f6;
        color: white;
    }

    .btn-edit:hover {
        background-color: #2563eb;
    }

    .btn-back {
        background-color: #94a3b8;
        color: white;
    }

    .btn-back:hover {
        background-color: #64748b;
    }
</style>

<div class="details-card">
    <h1>Author Details</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Biography</dt>
        <dd class="col-sm-9">@Model.Biography</dd>
    </dl>

    <div class="details-actions">
        <a asp-action="Edit" asp-route-id="@Model.AuthorId" class="btn-edit">Edit</a>
        <a asp-action="Index" class="btn-back">Back to List</a>
    </div>
</div>
