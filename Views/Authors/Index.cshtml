@model IEnumerable<AuthorViewModel>

@{
    ViewData["Title"] = "Authors";
}

<style>
    body {
        background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
        color: #e5e7eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    h1 {
        color: #60a5fa;
        font-weight: 800;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 5px #1e40af;
    }

    .btn-create {
        background-color: #2563eb;
        color: white;
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 0.6rem;
        border: none;
        display: inline-block;
        margin-bottom: 2rem;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #1d4ed8;
            text-decoration: none;
            color: white;
        }

    .author-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .author-card {
        background-color: #111827;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .author-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.7);
        }

    .author-name {
        font-size: 1.4rem;
        font-weight: bold;
        color: #93c5fd;
        margin-bottom: 0.5rem;
    }

    .author-bio {
        font-size: 0.95rem;
        color: #d1d5db;
        margin-bottom: 1rem;
    }

    .card-actions a {
        margin-right: 0.6rem;
        color: #60a5fa;
        font-weight: 500;
        text-decoration: none;
        padding: 0.4rem 0.8rem;
        border-radius: 0.4rem;
        border: 1px solid transparent;
        transition: all 0.3s ease;
        background-color: #1e3a8a;
    }

        .card-actions a:hover {
            background-color: #3b82f6;
            color: #fff;
            border-color: #60a5fa;
        }
</style>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn-create">+ Create New Author</a>
</p>

<div class="author-grid">
    @foreach (var author in Model)
    {
        <div class="author-card">
            <div class="author-name">@author.Name</div>
            <div class="author-bio">@author.Biography</div>
            <div class="card-actions">
                <a asp-action="Edit" asp-route-id="@author.AuthorId">Edit</a>
                <a asp-action="Details" asp-route-id="@author.AuthorId">Details</a>
                <a asp-action="Delete" asp-route-id="@author.AuthorId">Delete</a>
            </div>
        </div>
    }
</div>
